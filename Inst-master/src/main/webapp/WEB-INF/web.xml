<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>posts</servlet-name>
    <servlet-class>InstagramV01.Servlet.AllPostsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>posts</servlet-name>
    <url-pattern>/posts</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>newPost</servlet-name>
    <servlet-class>InstagramV01.Servlet.AddPostServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>newPost</servlet-name>
    <url-pattern>/newPost</url-pattern>
  </servlet-mapping>

  <!-- Sign Up servlet -->
  <servlet>
    <servlet-name>signUp</servlet-name>
    <servlet-class>InstagramV01.Servlet.SignUpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>signUp</servlet-name>
    <url-pattern>/signUp</url-pattern>
  </servlet-mapping>
  <!-- Sign In servlet -->
  <servlet>
    <servlet-name>signIn</servlet-name>
    <servlet-class>InstagramV01.Servlet.SignInServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>signIn</servlet-name>
    <url-pattern>/signIn</url-pattern>
  </servlet-mapping>
</web-app>
